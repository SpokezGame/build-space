{% extends 'base.html.twig' %}

{% block title %}Image{% endblock %}

{% block main %}
    <h1>Image</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ image.id }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ image.imageName }}</td>
            </tr>
            <tr>
                <th>ImageSize</th>
                <td>{{ image.imageSize }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ image.updatedAt ? image.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
    
    <img 
    src="{{ vich_uploader_asset(image, 'imageFile') }}" 
    alt="{{ image.imageName }}" 
    class="img-fluid rounded"
	/>

    <a href="{{ path('app_image_index') }}">back to list</a>

    <a href="{{ path('app_image_edit', {'id': image.id}) }}">edit</a>

    {{ include('image/_delete_form.html.twig') }}
{% endblock %}
