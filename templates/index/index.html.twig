{% extends 'base.html.twig' %}

{% block main %}
<h3>Welcome on BuildSpace !</h3>

<p>Here, you can find tutorials and tips on builds on the game Minecraft.</p>


<div class="image-row">
    <a href="{{ path("app_tutorial_index") }}">
        <img
        type="image" 
        src="{{ vich_uploader_asset(tutorials, 'imageFile') }}" 
        alt="Image of the symbol plus" 
        class="img-fluid"
        />
    </a>
    <a href="{{ path("app_member_index") }}">
        <img
        type="image" 
        src="{{ vich_uploader_asset(members, 'imageFile') }}" 
        alt="Image of the symbol plus" 
        class="img-fluid"
        />
    </a>
    <a href="{{ path("app_theme_index") }}">
        <img
        type="image" 
        src="{{ vich_uploader_asset(themes, 'imageFile') }}" 
        alt="Image of the symbol plus" 
        class="img-fluid"
        />
    </a>
</div>

{% endblock %}
