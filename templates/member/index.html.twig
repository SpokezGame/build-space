{% extends 'base.html.twig' %}

{% block title %}All members{% endblock %}

{% block main %}
    <h1>All members</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
        {% for member in members %}
            <tr>
                <td><a href="{{ path("app_member_show", {'id': member.id}) }}">{{ member }}</a></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">No members found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
