{% extends 'base.html.twig' %}

{% block main %}
	{# Show the detail of a tutorial #}
	<h3>Tutorial : {{ tutorial.name }} - {{ tutorial.library.member }}</h3>
	
	<ul>
        
        <li><b> Id : {{ tutorial.id }} </b></li>
        <li> Name : {{ tutorial.name }} </li>
        <li> Description : {{ tutorial.description }} </li>

    </ul>
	
	<a href="{{ path('app_tutorial_edit', {'id': tutorial.id}) }}">Edit</a>
    <a href="{{ path('app_library_show', {'id': tutorial.library.id}) }}">Back</a>
	
{% endblock %} {# body #} 
