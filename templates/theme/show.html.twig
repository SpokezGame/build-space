{% extends 'base.html.twig' %}

{% block title %}Theme{% endblock %}

{% block main %}
    <h1>Theme</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ theme.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ theme.name }}</td>
            </tr>
            <tr>
            	<th>Tutorials</th>
            	{% for tutorial in theme.tutorials %}
            		<td><a href="{{ path("app_theme_tutorial_show", {'theme_id': theme.id, 'tutorial_id': tutorial.id}) }}">{{ tutorial }}</a></td>
            	{% endfor %}
            	<td><a href="{{ path("app_tutorial_newintheme", {'id' : theme.id}) }}">Create a new tutorial</a></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_theme_index') }}">Back</a>

    <a href="{{ path('app_theme_edit', {'id': theme.id}) }}">Edit</a>

    {{ include('theme/_delete_form.html.twig') }}
{% endblock %}
